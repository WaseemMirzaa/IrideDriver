<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Fragments.BookingsFragment">

        <RelativeLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/headerLay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp">

            <RelativeLayout
                android:id="@+id/drawerIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_12sdp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/menu_black" />

            </RelativeLayout>

            <RelativeLayout
                android:visibility="invisible"
                android:id="@+id/searchIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_12sdp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/headerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:fontFamily="@font/gibson_regular"
            android:text="Promotions"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLay"/>

        <ImageView
            android:id="@+id/calendarIV"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_date_range_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLay"
            app:layout_constraintBottom_toBottomOf="@id/headerTV"
            app:tint="@color/purple_200" />

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:fontFamily="@font/gibson_regular"
            android:text="04\nDec"
            android:gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/calendarIV"
            app:layout_constraintTop_toTopOf="@id/calendarIV"
            app:layout_constraintBottom_toBottomOf="@id/calendarIV"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/promotionRV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/headerTV"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_10sdp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>